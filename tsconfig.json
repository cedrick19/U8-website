{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "src/globals/assetImport.d.ts"],
  "exclude": ["node_modules", "dist"]
}
